    <script>
        function frameLoaded() {
            const loading = document.getElementById('loading');
            const iframe = document.getElementById('appFrame');
            
            // TransiÃ§Ã£o suave
            setTimeout(() => {
                loading.style.opacity = '0';
                setTimeout(() => {
                    loading.classList.add('hidden');
                    iframe.classList.add('loaded');
                }, 500);
            }, 1000);
        }
        
        // Mensagens de carregamento dinÃ¢micas
        const messages = [
            "Preparando momentos inesquecÃ­veis...",
            "Carregando nossas memÃ³rias...",
            "Quase pronto para contar nossa histÃ³ria...",
            "Ajustando cada detalhe com amor..."
        ];
        
        let currentMessage = 0;
        const messageElement = document.querySelector('.loading-message');
        
        const messageInterval = setInterval(() => {
            if (currentMessage < messages.length) {
                messageElement.textContent = messages[currentMessage];
                currentMessage++;
            } else {
                clearInterval(messageInterval);
            }
        }, 2000);
        
        // Fallback: esconder loading apÃ³s 10 segundos
        setTimeout(() => {
            if (!document.getElementById('loading').classList.contains('hidden')) {
                frameLoaded();
            }
        }, 10000);
    </script>

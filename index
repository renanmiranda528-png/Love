    <script>
        // Criar partÃ­culas de fundo
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 20;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                
                const size = Math.random() * 10 + 5;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                
                particle.style.left = `${Math.random() * 100}vw`;
                particle.style.top = `${Math.random() * 100}vh`;
                
                particle.style.animationDelay = `${Math.random() * 15}s`;
                
                particlesContainer.appendChild(particle);
            }
        }
        
        // Simular progresso de carregamento
        function simulateProgress() {
            const messages = [
                "Preparando momentos inesquecÃ­veis...",
                "Carregando nossas memÃ³rias...",
                "Quase pronto para contar nossa histÃ³ria...",
                "Ajustando cada detalhe com amor..."
            ];
            
            let currentMessage = 0;
            const messageElement = document.querySelector('.loading-message');
            
            const interval = setInterval(() => {
                if (currentMessage < messages.length) {
                    messageElement.textContent = messages[currentMessage];
                    currentMessage++;
                }
            }, 2000);
            
            return interval;
        }
        
        // Esconder loading
        function hideLoading() {
            const loading = document.getElementById('loading');
            loading.style.opacity = '0';
            setTimeout(() => {
                loading.classList.add('hidden');
            }, 500);
        }
        
        // Inicializar
        document.addEventListener('DOMContentLoaded', function() {
            createParticles();
            simulateProgress();
            
            // Fallback: esconder loading apÃ³s 10 segundos
            setTimeout(() => {
                if (!document.getElementById('loading').classList.contains('hidden')) {
                    hideLoading();
                }
            }, 10000);
        });
    </script>
